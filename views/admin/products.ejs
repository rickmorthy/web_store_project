    <div class="card-columns ">
        <%if(product.length > 0){%>
            <%for(let prod of product){%>
               <div class="card mb-3" style="max-width: 540px;">
                    <div class="row no-gutters">
                    <div class="col-md-4">
                        <img src="<%=prod.imageUrl%>" class="card-img" alt="">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"><%=prod.title%></h5>
                            <p class="card-text">$ <%=prod.price%></p>
                            <div class="row">
                                <div class="col-3">
                                    <a href="/admin/edit-product/<%= prod.id %>?edit=true" class="btn btn-outline-secondary">Edit</a>
                                </div>  
                                <div class="col-3">
                                        <%- include('../include/delete',{id:prod.id})%>
                                </div>   
                            </div>    
                        </div>
                    </div>
                 </div>
                </div>
            <%}%>
        <%}else{ include('/notfound.ejs')}%>
    </div>




